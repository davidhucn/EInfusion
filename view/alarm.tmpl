<html>
  <head>
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script> 
      url = {{.url}};
      c = new WebSocket(url);
    
      c.onmessage = function(e){
        $("#status").text(e.data);
        //alert(e.data)
        console.log(e);
        
      };

      c.onerror=function(){
        $("#status").text("Connect Failure!")
      };

     c.onopen = function(){
       $("#status").text(" Connect Success!")
      };

    $("document").ready(function(){
      $("#s").click(function()
        {
          var jstr;
          var txt = $("#s").text();
          if (txt=="Alarm Closed"){
              $("#s").text("Alarm Opened...");
              jstr = [{"ID":"B0000000","CmdType":"12"}];
            }
            if (txt=="Alarm Opened..."){
              $("#s").text("Alarm Closed");
              jstr = [{"ID":"B0000000","CmdType":"13"}];
            }
            var ret =JSON.stringify(jstr);
            c.send(ret);
        }
            // $("#status").html("<b>Hello world!</b>");
    );
})
    </script>
    <title>Transfusion</title>
  </head>
  <body>
    <h1 align="center">Transfusion Test </h1> 
    <hr style="height:1px;border:none;border-top:1px dashed #093834;" />

    <center>Switch: &nbsp;&nbsp;&nbsp;<button id="s">Alarm Closed</button> &nbsp;&nbsp;&nbsp; <label id="status">Waiting...</label></center>
    <p></p>
    <p>&nbsp;</p>

  </body>

</html>